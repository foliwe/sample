<div class="container">
    <div class="row mt-5">

        <div class="col-sm-4">
            <div class="card_wrapper bg-white">

              <div class="card_top">

                    <figure class="img">
                        <%= image_tag avatar_url(current_user),class:"rounded-circle"%>
                    </figure>

                     <h5><%= current_user.full_name%></h5> 

                    <div class=""> <small>If you think, then you are alive</small> </div>

