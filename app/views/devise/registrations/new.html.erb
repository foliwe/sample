<div class="page_wrapper">
  <div class="signup_info">
    <div class="signup_info_content">
      <div class="">
        <%=image_tag('logo.svg')%>
      </div>
     <div class="mt-4 d-none d-sm-block">
        Codementor is an online mentorship <br> platform under the Arc brand.  This means you can use the same account to log into both Codementor and Arc
     </div>
     <div class="my-5">Read about our new Arc brand</div>

    </div>
  </div>
  <div class="signup_form">
  <div class="signup_form_header text-center my-4"><h5>Create an account<br /> 
     to continue to Sample App</h5></div>
    <div class="form_wrapper">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :full_name%><br />
          <%= f.text_field :full_name, autofocus: true,class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email" ,class:"form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "SIGN UP" ,class:"btn btn-info"%>
        </div>
        <div class="actions my-2">
          <%= link_to  "SIGN UP WITH FACEBOOK" ,user_facebook_omniauth_authorize_path,class:"btn btn-primary btn-block"%>
        </div>
      <% end %>
          <div class="signup_form_footer">
            <div class="">
              By creating an account, I agree to the Terms of Service, Privacy 
            </div>
              <div class="">
                Policy, and Cookie Policy.
              </div>
            <div class="">
              Already have an account? <%= render "devise/shared/links" %>
            </div>
          </div>
      
    </div>
  </div>
</div>


